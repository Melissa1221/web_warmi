  {
    imgurl: "/assets/sponsor/red-impacto.png"
  },
  {
    imgurl: "/assets/sponsor/kg-apps.png",
  },
  {
    imgurl: "/assets/sponsor/red-nacional-laboratorio-pcm.png",
  },
  {
    imgurl: "/assets/sponsor/parquetec-mexico.jpg",
  },
  {
    imgurl: "/assets/sponsor/impacto-bcp.png",
  },
  {
    imgurl: "/assets/sponsor/hubspot.png",
  },
  {
    imgurl: "/assets/sponsor/asep.png",
  },
  {
    imgurl: "/assets/sponsor/arkangeles.png",
  },
  {
    imgurl: "/assets/sponsor/sharecollab.png",
  },
  {
    imgurl: "/assets/sponsor/escala.png",
  },
